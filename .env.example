# Voorbeeld .env bestand voor Sigmapips Trading Bot
# Kopieer dit bestand naar .env en vul de juiste waarden in

# Telegram Bot Token (verplicht)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# API sleutels voor externe diensten (optioneel)
TAVILY_API_KEY=your_tavily_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
TRADINGVIEW_SESSION_ID=your_tradingview_session_id_here

# Database configuratie (optioneel)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# Marktdata instellingen (belangrijk)
# Stel deze altijd in op "true" om alleen echte marktdata te gebruiken
PREFER_REAL_MARKET_DATA=true
ALWAYS_USE_DEFAULT_ANALYSIS=false

# Andere instellingen
USE_SIMPLE_TA_FORMAT=false
LOGGING_LEVEL=INFO

# Redis cache configuratie (optioneel)
REDIS_URL=redis://localhost:6379 